section(ui-view="")
  .page-title
    h2 Customers
    input.form-control(type='text', placeholder='Search Customers', ng-model='searchCustomers')
    .page-inner
      table.table.table-responsive.table-striped.table-bordered(ng-hide="data.length == 0")
        thead
          tr
            th(ng-click="sortType = 'id'; sortReverse = !sortReverse") Id
              span.fa.fa-caret-down(ng-show="sortType == 'id' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'id' && sortReverse")
            th(ng-click="sortType = 'login'; sortReverse = !sortReverse") Login
              span.fa.fa-caret-down(ng-show="sortType == 'login' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'login' && sortReverse")
            th(ng-click="sortType = 'imie'; sortReverse = !sortReverse") Name
              span.fa.fa-caret-down(ng-show="sortType == 'imie' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'imie' && sortReverse")
            th(ng-click="sortType = 'nazwisko'; sortReverse = !sortReverse") Last Name
              span.fa.fa-caret-down(ng-show="sortType == 'nazwisko' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'nazwisko' && sortReverse")
            th(ng-click="sortType = 'miejscowosc'; sortReverse = !sortReverse") City
              span.fa.fa-caret-down(ng-show="sortType == 'miejscowosc' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'miejscowosc' && sortReverse")
            th(ng-click="sortType = 'telefon'; sortReverse = !sortReverse") Phone
              span.fa.fa-caret-down(ng-show="sortType == 'telefon' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'telefon' && sortReverse")
            th Action
        tbody
          tr(ng-repeat="item in category | orderBy:sortType:sortReverse | filter: searchCustomers:item as data")
            h4(ng-show="data.length == 0") There are no person matching the search conditions.
            td
              | {{item.id}}
            td
              | {{item.login}}
            td
              | {{item.imie}}
            td
              | {{item.nazwisko}}
            td
              | {{item.miejscowosc}}
            td
              | {{item.telefon}}
            td
              button.btn.btn-xs.btn-info(ng-click="resetPassword(item.login)") RESET PASSWORD
              button.btn.btn-xs.btn-danger(ng-click="deleteCustomers(item)") DELETE


